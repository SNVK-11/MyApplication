<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="113dp"
        android:layout_height="100dp"
        android:src="@drawable/account" />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="350sp"
        android:layout_gravity="center"
        android:layout_margin="16sp"
        app:cardCornerRadius="60dp"
        app:cardElevation="15sp"
        android:backgroundTint="@color/white">


        <TextView
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19sp"
            android:layout_marginTop="19sp"
            android:layout_marginRight="19sp"
            android:fontFamily="@font/adamina"
            android:text="Login Here"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etLoginUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19sp"
            android:layout_marginTop="70sp"
            android:layout_marginRight="19sp"
            android:fontFamily="@font/adamina"
            android:hint="Username"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19sp"
            android:layout_marginTop="110sp"
            android:layout_marginRight="19sp"
            android:fontFamily="@font/adamina"
            android:hint="Password"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbLoginShowHidePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19sp"
            android:layout_marginTop="150sp"
            android:layout_marginRight="19sp"
            android:checked="false"
            android:fontFamily="@font/adamina"
            android:text="Remember me"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvLoginForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="160sp"
            android:layout_marginRight="19sp"
            android:fontFamily="@font/adamina"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="Forget Password ?"
            android:textColor="@color/teal"
            android:textColorHint="@color/red"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bynLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/adamina"
            android:text="Login"
            android:background="@drawable/btn_bg_shape_blue"
            android:textColor="@color/white"
            android:textSize="19sp"
            tools:ignore="VisualLintButtonSize" />

        <TextView
            android:id="@+id/tvLoginSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/adamina"
            android:gravity="center_horizontal"
            android:text="Click here to sign up"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acbtnLoginSignInWithGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sign in with Google"
        android:textColor="@color/white" />


</LinearLayout>